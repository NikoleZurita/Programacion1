#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;

void main()
{
	int N,i,f;
	float s,x;
	cout<< "ingrese el valor de N: ";
	cin>>N;
	cout<< "ingrese el valor de x: ";
	cin>>x;
	s=0;
	f=1;
	for (i=1;i<=N;i++)
	{
		f=f*i;
		s=s+pow(x,1)/f;
	}
	cout<<s;
	getch();
}
